@model IEnumerable<BusinessObjects.Product>;
@{
}
<style>
	a{
		text-decoration:none;
	}

    .btn a, .btn a:hover {
        color: #fff;
        text-decoration: none;
    }
</style>
<h1>List all products</h1>
<p>
	<button class="btn btn-primary">@Html.ActionLink("Create", "Create")</button>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model=>model.ProductName)
			</th>
			<th>
				@Html.DisplayNameFor(model=>model.UnitsInStoke)
			</th>
			<th>
				@Html.DisplayNameFor(model=>model.UnitPrice)
			</th>
			<th>
				@Html.DisplayNameFor(model=>model.Category)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model){
			<tr>
				<td>
					@Html.DisplayFor(modelItem=>item.ProductName)
				</td>
				<td>
					@Html.DisplayFor(modelItem=>item.UnitsInStoke)
				</td>
				<td>
					@Html.DisplayFor(modelItem=>item.UnitPrice)
				</td>
				<td>
					<select class="form-control" asp-items="ViewBag.CategoryId" asp-for="@item.CategoryId" disabled></select>
				</td>
				<td>
					@Html.ActionLink("Details", "Details", new { id = item.ProductId}) |
					@Html.ActionLink("Edit", "Edit", new { id = item.ProductId}) |
					@Html.ActionLink("Delete", "Delete", new { id = item.ProductId})
				</td>
			</tr>
		}
	</tbody>
</table>